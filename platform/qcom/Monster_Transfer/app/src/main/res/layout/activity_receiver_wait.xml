<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.tcl.transfer.activity.ReceiverWaitActivity"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:layout_marginTop="60dp">
        <ImageView
            android:id="@+id/center_image"
            android:layout_width="match_parent"
            android:layout_height="247dp"
            android:layout_centerInParent="true"
            android:src="@drawable/success"/>
        <TextView
            android:id="@+id/wait_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:fontFamily="monster-normal"
            android:gravity="right"
            android:textColor="@color/common_text_color"
            android:text="@string/text_wait_for_send_one"/>
        <TextView
            android:id="@+id/point_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_toRightOf="@id/wait_text"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textSize="14sp"
            android:fontFamily="monster-normal"
            android:gravity="right"
            android:textColor="@color/common_text_color" />
    </RelativeLayout>
    <Button
        android:id="@+id/cancel"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginBottom="@dimen/common_button_margin"
        android:layout_marginLeft="@dimen/common_button_margin"
        android:layout_marginRight="@dimen/common_button_margin"
        android:text="@string/text_cancel"
        android:fontFamily="monster-normal"
        android:background="@drawable/old_button"/>

</RelativeLayout>
