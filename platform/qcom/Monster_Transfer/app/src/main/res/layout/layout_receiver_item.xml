<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/qq_transfer_restore_icon_size"
            android:layout_height="@dimen/qq_transfer_restore_icon_size"
            android:src="@drawable/system_icon"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qq_transfer_icon_margin_right"
            android:layout_marginLeft="@dimen/qq_transfer_icon_margin_left"/>
        <LinearLayout
            android:id="@+id/top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/icon">
            <TextView
                android:id="@+id/type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/qq_transfer_type_name_margin_top"
                android:lines="1"
                android:textSize="@dimen/qq_transfer_type_name_size"
                android:fontFamily="monster-normal"
                android:textColor="@color/item_text_color"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/receive_status"
                    android:layout_width="@dimen/qq_transfer_receive_text_width"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:textSize="@dimen/qq_transfer_receive_size"
                    android:fontFamily="monster-normal"
                    android:textColor="@color/item_bottom_text_color"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/receive_size"
                    android:layout_width="@dimen/qq_transfer_receive_size_text_width"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/qq_transfer_receive_size_margin_right"
                    android:lines="1"
                    android:textSize="@dimen/qq_transfer_receive_size"
                    android:fontFamily="monster-normal"
                    android:visibility="visible"
                    android:textColor="@color/item_bottom_text_color"
                    android:ellipsize="end"
                    android:gravity="right"/>
            </RelativeLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/finish_mark"
            android:layout_width="@dimen/qq_transfer_finish_icon_size"
            android:layout_height="@dimen/qq_transfer_finish_icon_size"
            android:src="@drawable/right"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qq_transfer_finish_icon_margin_right"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/restore"
            android:layout_width="@dimen/qq_transfer_restore_icon_size"
            android:layout_height="@dimen/qq_transfer_restore_icon_size"
            android:src="@drawable/loading"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/qq_transfer_finish_icon_margin_right"
            android:visibility="invisible"/>
        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qq_transfer_progress_height"
            android:layout_below="@id/top"
            android:layout_marginLeft="@dimen/qq_transfer_progress_margin_left"
            android:layout_marginRight="@dimen/qq_transfer_progress_margin_right"
            android:layout_marginTop="@dimen/qq_transfer_progress_margin_top"
            android:layout_marginBottom="@dimen/qq_transfer_progress_margin_bottom"
            android:progressDrawable="@drawable/progressbar_style"/>
</RelativeLayout>
