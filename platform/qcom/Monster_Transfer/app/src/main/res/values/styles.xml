<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ResultButton" parent="@android:style/Widget.Holo.Button.Borderless.Small">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="ShareButton" parent="@android:style/Widget.Holo.Button.Borderless.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="exitAppDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="checkIconStyle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="appIconStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="appNameStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">monster-normal</item>
        <item name="android:textColor">#db000000</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="categoryIconStyle">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="expandIconStyle">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="completeInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">monster-normal</item>
        <item name="android:textColor">#66000000</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="bottomBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">monster-normal</item>
        <item name="android:textColor">#db000000</item>
        <item name="android:background">@drawable/old_button</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="note_text_style">
        <item name="android:textColor">#4c000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="qq_note_text_style">
        <item name="android:textColor">@color/common_text_color</item>
