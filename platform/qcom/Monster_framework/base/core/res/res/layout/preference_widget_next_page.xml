<!--
     Layout used by SwitchPreference for the switch widget style. This is inflated
     inside android.R.layout.preference.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/next_widget_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@null"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/next_widget_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:paddingEnd="5dp"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/next_widget_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@null" 
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/next_widget_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@null" 
        android:src="@drawable/ic_next_page"
        android:tint="#d8d8d8"
        />

</LinearLayout>