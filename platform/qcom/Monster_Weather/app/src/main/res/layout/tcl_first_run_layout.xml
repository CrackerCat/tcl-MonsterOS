<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
        <ImageView
            android:layout_width="131dp"
            android:layout_height="131dp"
            android:id="@+id/locate_state"
            android:layout_marginTop="193dp"
            android:layout_gravity="center_horizontal"
            />

        <cn.tcl.weather.view.TclCustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/hint"
            android:textColor="@color/clr_8A000000"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/tx_sp_13"
            />

        <Button
            android:layout_width="130dp"
            android:layout_height="32dp"
            android:layout_marginTop="48dp"
            android:id="@+id/user_guidance"
            android:textColor="@color/clr_8A000000"
            android:textSize="@dimen/tx_sp_14"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/tcl_first_run_locate_button"
            android:visibility="gone" />

</LinearLayout>