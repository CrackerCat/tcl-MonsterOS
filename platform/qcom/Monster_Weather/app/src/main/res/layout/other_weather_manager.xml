<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginLeft="@dimen/px_60"
        android:layout_width="@dimen/px_72"
        android:layout_height="@dimen/px_72"
        android:src="@drawable/page_arrow"
        android:id="@+id/back_button"
        />

    <cn.tcl.weather.view.TclCustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_manager"
        android:textColor="#D9000000"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@id/back_button"
        android:layout_marginLeft="@dimen/px_36"
        android:textSize="@dimen/px_48" />

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/px_60"
        android:layout_alignParentEnd="true"
        android:layout_width="@dimen/px_72"
        android:layout_height="@dimen/px_72"
        android:src="@drawable/page_addto"
        android:id="@+id/add"
        android:background="#00000000" />

    <cn.tcl.weather.view.list.DragSortListView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/city_manager_listview"
        android:layout_below="@+id/back_button"
        android:divider="#00000000"
        android:dividerHeight="6dp"
        android:layout_alignParentStart="true"
        />

</RelativeLayout>
