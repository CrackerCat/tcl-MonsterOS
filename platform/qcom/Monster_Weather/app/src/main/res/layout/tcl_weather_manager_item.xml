<cn.tcl.weather.view.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/delete"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="19dp"
            android:id="@+id/delete"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/city_item"
        android:layout_width="wrap_content"
        android:layout_height="130dp">

        <cn.tcl.weather.view.TclCustomTextView
            android:id="@+id/city_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp"
            android:fontFamily="monster-medium"
            android:text="@string/test"
            android:textColor="#B8000000"
            android:textSize="24dp" />

        <cn.tcl.weather.view.TclCustomTextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="13dp"
            android:fontFamily="monster-normal"
            android:text="@string/test"
            android:textColor="#FF000000"
            android:textSize="17dp" />

        <cn.tcl.weather.view.TclCustomTextView
            android:id="@+id/weather_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/temperature"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="6dp"
            android:layout_marginEnd="@dimen/px_60"
            android:fontFamily="monster-normal"
            android:text="@string/test"
            android:textColor="#FF000000"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/location_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/city_name"
            android:src="@drawable/ic_adrees"
            android:visibility="invisible" />
    </RelativeLayout>

</cn.tcl.weather.view.SwipeLayout>