<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="159dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/scan_result_state_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/scan_finished_no_risk"
        android:layout_marginTop="43dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/scan_result_desc"
        style="@com.mst:style/TextAppearance.Mst.Material.Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:maxLines="1"
        android:layout_marginTop="18dp"
        android:text="@string/scan_finish_state_no_risk"/>

</LinearLayout>