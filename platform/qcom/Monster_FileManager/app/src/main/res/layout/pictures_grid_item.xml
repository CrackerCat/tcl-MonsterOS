<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/pictures_grid_view_item"
        android:layout_width="@dimen/picture_image_size"
        android:layout_height="@dimen/picture_image_size"
        android:background="@drawable/permission_deny" />

    <TextView
        android:id="@+id/pictures_folder_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pictures_count_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />
</RelativeLayout>
