<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp">

    <View
        android:id="@+id/left_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:visibility="gone"
        android:background="#EBEBEC" />

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="top"
        android:visibility="gone"
        android:background="#EBEBEC" />

    <View
        android:id="@+id/right_line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:visibility="gone"
        android:background="#EBEBEC" />

    <View
        android:id="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:background="#EBEBEC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:descendantFocusability="blocksDescendants"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/category_img"
            android:layout_width="@dimen/category_image_size"
            android:layout_height="@dimen/category_image_size"
            android:layout_gravity="center_horizontal"
            android:scaleType="center"
            android:src="@drawable/btn_search" />

        <TextView
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/category_item_name_text_size" />

        <TextView
            android:id="@+id/category_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/textGrayColor"
            android:textSize="@dimen/category_item_count_text_size" />

    </LinearLayout>
</FrameLayout>
