<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="#eeeff0"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="@string/safe_name_title"/>

    <!-- the max length of box name is 20 -->
    <EditText
        android:id='@+id/safe_box_name'
        style="@style/rectangleEdittextStyle"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="10dp"
        android:hint="@string/safe_box_name_tip"
        android:minEms="4"
        android:maxLength="20"
        android:textColorHint="@color/textGrayColor"
        android:textSize="@dimen/edit_text_view_text_size"/>

    <TextView
        android:id="@+id/name_limit_text_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:visibility="gone"
        android:textSize="12sp"
        android:text="@string/rename_limit"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="#eeeff0"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/set_password_pass"/>


    <EditText
        android:id='@+id/set_password_enter'
        style="@style/rectangleEdittextStyle"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="10dp"
        android:digits="1234567890"
        android:hint="@string/set_password_first"
        android:inputType="number"
        android:maxLength="12"
        android:minEms="4"
        android:password="true"
        android:textColorHint="@color/textGrayColor"
        android:textSize="@dimen/edit_text_view_text_size"/>

    <EditText
        android:id='@+id/set_password_conform'
        style="@style/rectangleEdittextStyle"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:digits="1234567890"
        android:hint="@string/set_password_again"
        android:inputType="number"
        android:maxLength="12"
        android:minEms="4"
        android:password="true"
        android:textColorHint="@color/textGrayColor"
        android:textSize="@dimen/edit_text_view_text_size"/>

    <CheckBox
        android:id="@+id/set_password_show"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:text="@string/set_password_show"
        android:textColor="@color/textColorPrimary"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="#eeeff0"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/set_password_safe_question"/>

    <Spinner
        android:id="@+id/set_password_spinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:entries="@array/safe_question"/>

    <EditText
        android:id='@+id/set_password_answer'
        style="@style/rectangleEdittextStyle"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:hint="@string/set_password_safe_question_answer"
        android:textColorHint="@color/textGrayColor"
        android:textSize="@dimen/edit_text_view_text_size"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="10dp"
        android:text="@string/set_password_safe_forget_pass"/>

</LinearLayout>
