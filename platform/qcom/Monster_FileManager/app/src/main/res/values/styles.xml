<resources>

    <style name="FileManagerBaseTheme" parent="@com.mst:style/Theme.Mst.Material.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="ToolbarStyle" parent="com.mst:style/ToolbarStyle">
        <item name="com.mst:title">@string/app_name</item>
    </style>

    <style name="Theme.MstActivity" parent="@com.mst:style/Theme.Mst.Material.Light">
        <item name="android:toolbarStyle">@style/Style.MstActivity.ToolbarStyle</item>
        <item name="com.mst:windowHasToolbar">false</item>
    </style>

    <style name="Style.MstActivity.ToolbarStyle" parent="com.mst:style/ToolbarStyle">
        <item name="com.mst:title">MstActivityDemo</item>
    </style>

    <style name="FileManagerOperActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/fm_bar_bg</item>
        <item name="android:displayOptions"></item>
    </style>

    <style name="StyleProgressBarMini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_mini</item>
    </style>

    <style name="bottomMenuParentStyle">
        <item name="android:layout_width">@dimen/menu_parent_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/bottom_bar_margin_top</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--add for PR847812,PR869667 by yane.wang@jrdcom.com 20141125  -->
    <style name="bottomMenuTextStyle">
        <item name="android:layout_width">@dimen/menu_parent_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/bar_small_text_size</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:focusable">true</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="categoryBottomMenuParentStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/bottom_bar_margin_top</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="categoryBottomPercentageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox</item>
    </style>

    <style name="CustomEditTextTheme" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edittext</item>
    </style>

    <style name="rectangleEdittextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_view_height</item>
        <!--<item name="android:background">@drawable/rectangle_drawable</item>-->
        <item name="android:paddingLeft">3dp</item>
    </style>
    <style name="PieChartTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/chart_text_name_left</item>
        <item name="android:gravity">left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/chart_text_size</item>
        <item name="android:alpha">0.87</item>
        <item name="android:fontFamily">monster-normal</item>
        <item name="android:layout_marginLeft">@dimen/chart_text_left</item>
    </style>
    <style name="PieChartTextValueStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/chart_text_value_width</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/chart_text_value</item>
        <item name="android:alpha">0.26</item>
        <item name="android:fontFamily">monster-normal</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
</resources>
