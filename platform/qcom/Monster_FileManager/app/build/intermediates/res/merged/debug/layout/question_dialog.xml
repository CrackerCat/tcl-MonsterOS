<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/question_dialog_title"
        android:layout_width="@dimen/password_dialog_width"
        android:layout_height="wrap_content"
        android:layout_margin="15dp" />

    <EditText
        android:id="@+id/question_dialog_edittext"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:textSize="@dimen/edit_text_view_text_size"
        style="@style/rectangleEdittextStyle"
        android:hint="@string/set_password_safe_question_answer" />

</LinearLayout>
