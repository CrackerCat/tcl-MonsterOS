<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:background="#eeeff0"
        android:gravity="center_vertical"
        android:text="@string/set_password_pass"/>

    <EditText
        android:id='@+id/forget_password_enter'
        android:layout_width="match_parent"
        style="@style/rectangleEdittextStyle"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:digits="1234567890"
        android:textSize="@dimen/edit_text_view_text_size"
        android:layout_marginBottom="10dp"
        android:password="true"
        android:inputType="number"
        android:maxLength="12"
        android:minEms="4"
        android:hint="@string/set_password_first"/>

    <EditText
        android:id='@+id/forget_password_conform'
        android:layout_width="match_parent"
        style="@style/rectangleEdittextStyle"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:digits="1234567890"
        android:password="true"
        android:textSize="@dimen/edit_text_view_text_size"
        android:inputType="number"
        android:maxLength="12"
        android:minEms="4"
        android:hint="@string/set_password_again"/>

    <CheckBox
        android:id="@+id/forget_password_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        android:text="@string/set_password_show"/>

    </LinearLayout>
