<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id='@+id/update_password_original'
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:digits="1234567890"
        android:textSize="@dimen/edit_text_view_text_size"
        android:layout_marginBottom="10dp"
        android:password="true"
        android:inputType="number"
        android:maxLength="12"
        style="@style/rectangleEdittextStyle"
        android:hint="@string/update_password_original_cn"/>

    <EditText
        android:id='@+id/update_password_frist'
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:digits="1234567890"
        android:password="true"
        android:textSize="@dimen/edit_text_view_text_size"
        android:inputType="number"
        android:maxLength="12"
        style="@style/rectangleEdittextStyle"
        android:hint="@string/input_new_password_hint"/>

    <EditText
        android:id='@+id/update_password_confirm'
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:digits="1234567890"
        android:password="true"
        android:textSize="@dimen/edit_text_view_text_size"
        android:inputType="number"
        android:maxLength="12"
        style="@style/rectangleEdittextStyle"
        android:hint="@string/set_password_again"/>

    <CheckBox
        android:id="@+id/update_password_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="10dp"
        android:text="@string/set_password_show"/>

</LinearLayout>
