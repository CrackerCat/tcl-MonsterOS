<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RL_list_item"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="40dp"
        android:background="@drawable/tcl_calculator_background" >

        <ImageView
            android:id="@+id/iv_is_checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="38dp"
            android:src="@drawable/img_select" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/currency_cell"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_short_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/currency_cell"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>