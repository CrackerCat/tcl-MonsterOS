<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/home_item_background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/home_backgroud</item>
    </style>

    <style name="AppTheme.blackStatue">
        <item name="android:colorPrimaryDark">@color/crop_action_bar_color</item>
        <item name="android:navigationBarColor">@color/crop_bg_color</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--edit tool style-->
    <style name="edit_tool_style">
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!--toolbar style-->
    <style name="toolbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="style_button_bottom">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="toolbar_div_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/tool_bar_div_line_color</item>
    </style>

    <style name="audio_button_style">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <style name="text_14_db">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#DB000000</item>
    </style>
    <style name="text_12_59">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#59000000</item>
    </style>

    <style name="style_crop_button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#dbffffff</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00000000</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Theme.MstHomeActivity" parent="@com.mst:style/Theme.Mst.Material.Light">
        <item name="com.mst:windowLayoutStyle">@style/Style.MstActivity</item>
        <item name="android:toolbarStyle">@style/Style.MstActivity.ToolbarStyleNoMargin</item>
        <item name="com.mst:actionPositiveText">@string/home_all_selection</item>
        <item name="com.mst:actionNagativeText">@com.mst:string/cancel</item>
    </style>

    <style name="Theme.MstActivity" parent="@com.mst:style/Theme.Mst.Material.Light">
        <item name="com.mst:windowLayoutStyle">@style/Style.MstActivity</item>
        <item name="android:toolbarStyle">@style/Style.MstActivity.ToolbarStyle</item>
        <item name="com.mst:actionPositiveText">@string/home_all_selection</item>
        <item name="com.mst:actionNagativeText">@com.mst:string/cancel</item>
    </style>

    <style name="Style.MstActivity" parent="com.mst:WindowStyle.Light">
        <item name="com.mst:hasBackIcon">true</item>
        <item name="android:colorPrimaryDark">@color/toolbar_background</item>
    </style>

    <style name="Style.MstActivity.ToolbarStyle" parent="com.mst:style/ToolbarStyle">
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:height">48dp</item>
    </style>

    <style name="Style.MstActivity.ToolbarStyleNoMargin" parent="@style/Style.MstActivity.ToolbarStyle">
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:height">48dp</item>
        <item name="com.mst:titleMarginStart">0dp</item>
    </style>



</resources>
