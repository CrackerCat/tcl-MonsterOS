<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg"
    tools:context="cn.tcl.setupwizard.ui.TermsContentActivity">

    <LinearLayout
        android:id="@+id/terms_header"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:paddingStart="26dp">
            <ImageButton
                android:id="@+id/header_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"/>
            <TextView
                android:id="@+id/terms_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical"
                android:fontFamily="monster-normal"
                android:textColor="#DB000000"
                android:textSize="17sp"
                android:text="@string/user_terms_license" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="74dp"
        android:paddingEnd="6dp"
        android:layout_below="@id/terms_header">

        <TextView
            android:id="@+id/terms_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="26dp"
            android:paddingEnd="20dp"
            android:lineSpacingMultiplier="1.5"
            android:fontFamily="monster-normal"
            android:textColor="#59000000"
            android:textSize="13sp"/>
    </ScrollView>

</RelativeLayout>
