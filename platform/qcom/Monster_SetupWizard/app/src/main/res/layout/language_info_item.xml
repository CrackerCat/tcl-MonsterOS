<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/language_status_content"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/language_select_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_checked"
            android:visibility="gone"/>
    </FrameLayout>
    <TextView
        android:id="@+id/language_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/language_status_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:textAlignment="center"
        android:fontFamily="SourceHanSansCN-Light"
        android:textColor="#59000000"
        android:textSize="15sp"
        android:text="zhongguo"/>

</RelativeLayout>
