<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingStart="40dip"
    android:paddingEnd="40dip" >

    <TextView
        android:id="@+id/txt_yx_perm"
        android:layout_width="match_parent"
        android:layout_height="57dip"
        android:drawableRight="@drawable/open_bg"
        android:gravity="center_vertical"
        android:text="@string/lbl_yx_perm"
        android:textColor="#db000000"
        android:textSize="16sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llyt_ys_perm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

    <TextView
        android:id="@+id/txt_other_perm"
        android:layout_width="match_parent"
        android:layout_height="57dip"
        android:drawableRight="@drawable/open_bg"
        android:gravity="center_vertical"
        android:text="@string/lbl_other_perm"
        android:textColor="#db000000"
        android:textSize="16sp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llyt_other_perm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >
    </LinearLayout>

</LinearLayout>