<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mst="http://schemas.android.com/apk/res/com.mst"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    
    >

    <mst.widget.recycleview.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
       android:paddingStart="@dimen/layout_main_padding"
       android:paddingEnd="@dimen/layout_main_padding"
       android:background="@android:color/transparent"
        />

    <include layout="@layout/bottom_navigation_delete_bar" />

</FrameLayout>