<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyguard_list_image_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/keyguard_list_image_height"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/keyguard_list_item_left_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="fitXY"
         />

    <LinearLayout
        android:id="@+id/keyguard_list_item_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/keyguard_list_item_top_right_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.32"
            android:layout_marginLeft="@dimen/keyguard_list_image_space"
            android:layout_marginBottom="@dimen/keyguard_list_image_space"
             android:scaleType="centerCrop"
            />

        <LinearLayout
            android:id="@+id/keyguard_list_item_bottom_right_parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.68"
            android:orientation="horizontal" />
        </LinearLayout>

</LinearLayout>