<?xml version="1.0" encoding="utf-8"?>
<com.mst.wallpaper.widget.KeyguardPreviewLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/preview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <include layout="@layout/time_widget_layout"
        android:layout_alignParentTop="true"
        />

    <com.mst.wallpaper.widget.PreviewCycleTimeView
        android:id="@+id/preview_time"
        android:layout_width="33dip"
        android:layout_height="33dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/preview_time_bottom" 
        android:visibility="gone"
        />

</com.mst.wallpaper.widget.KeyguardPreviewLayout>