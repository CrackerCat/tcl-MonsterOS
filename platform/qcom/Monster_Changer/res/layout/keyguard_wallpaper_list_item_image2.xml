<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/keyguard_list_image_parent"
    android:layout_width="match_parent"
    android:layout_height="@dimen/keyguard_list_image_height"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/keyguard_list_item_left_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/keyguard_list_item_top_right_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/keyguard_list_image_space"
        android:layout_weight="1"
        android:scaleType="centerCrop" />

</LinearLayout>