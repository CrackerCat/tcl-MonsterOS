<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
            android:id="@+id/custom_top_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/filtershow_custom_top_bar_height"
            android:paddingTop="@dimen/eidt_page_tool_bar"
            android:background="@color/custom_top_bar_bg_color">
            
        <Button android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="12dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple"
            android:text="@string/mst_cancel"
            android:textColor="@color/filtershow_custom_top_bar_text_color"
            android:textSize="@dimen/custom_top_bar_text_size"/>
        
        <ImageButton android:id="@+id/cancel_apply_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:paddingRight="12dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple"
            android:visibility="gone"
            android:src="@drawable/mst_top_bar_cancel_apply"
            android:textColor="@color/filtershow_custom_top_bar_text_color"
            android:textSize="@dimen/custom_top_bar_text_size"
            android:contentDescription="@null"/>
        
        <Button android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ripple"
            android:text="@string/mst_reset"
            android:textColor="@color/filtershow_custom_top_bar_text_color"
            android:textSize="@dimen/custom_top_bar_text_size"/>
        
        <Button android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple"
            android:layout_alignParentEnd="true"
            android:text="@string/mst_save"
            android:textColor="@color/filtershow_custom_top_bar_text_color"
            android:textSize="@dimen/custom_top_bar_text_size"/>
        
        <ImageButton android:id="@+id/apply_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="12dp"
           android:layout_marginRight="20dp"
           android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ripple"
            android:visibility="gone"
            android:src="@drawable/mst_top_bar_apply"
            android:textColor="@color/filtershow_custom_top_bar_text_color"
            android:textSize="@dimen/custom_top_bar_text_size"
            android:contentDescription="@null"/>
        
    </RelativeLayout>

