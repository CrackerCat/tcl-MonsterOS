<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@null"
    android:layout_gravity="top">

    <FrameLayout
        android:id="@+id/settings_framelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_framelayout_height"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:background="@null"/>
    <com.android.camera.widget.TopMenus
        android:id="@+id/top_mode_options"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.android.camera.ui.LockRotatableButton
            android:id="@+id/camera_flash_button"
            android:src="@drawable/ic_flash_auto"
            style="@style/TopMenus"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/flash"/>
        <com.android.camera.ui.LockRotatableButton
            android:id="@+id/camera_contacts_back_button"
            android:src="@drawable/contacts_back"
            style="@style/TopMenus"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/back"/>
        <com.android.camera.ui.LockRotatableButton
            android:id="@+id/camera_filters_button"
            style="@style/TopMenus"
            android:src="@drawable/ic_filter"
            android:contentDescription="@string/mode_filters"/>
        <com.android.camera.ui.LockRotatableButton
            android:id="@+id/camera_pose_button"
            android:src="@drawable/ic_gesture"
            style="@style/TopMenus"
            android:layout_toRightOf="@id/camera_flash_button"
            android:layout_toLeftOf="@+id/camera_filters_button"
            android:contentDescription="@string/mode_pose"/>
        <com.android.camera.ui.LockRotatableButton
            android:id="@+id/menu_setting_button_new"
            android:src="@drawable/ic_settings"
            style="@style/TopMenus"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/mode_settings"/>
        <com.android.camera.ui.LockRotatableButton
            android:id="@+id/camera_contacts_flash_button"
            android:src="@drawable/ic_flash_auto"
            style="@style/TopMenus"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/flash"/>
    </com.android.camera.widget.TopMenus>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.android.camera.ui.LockRotatableButton
            android:id="@+id/countdown_timers_indicator"
            android:layout_width="@dimen/countdown_timers_width"
            android:layout_height="@dimen/countdown_timers_height"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:background="@null"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/countdown_timers_indicator_margin_right"/>
    </RelativeLayout>
</LinearLayout>
