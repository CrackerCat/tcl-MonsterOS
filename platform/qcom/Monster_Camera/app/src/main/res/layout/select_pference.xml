<com.android.camera.ui.SelectTextViewLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_preference"
    android:layout_width="match_parent"
    android:layout_height="@dimen/select_pref_height"
    android:orientation="vertical"
    android:paddingStart="@dimen/select_pref_padding_start"
    android:paddingEnd="@dimen/select_pref_padding_end">

    <TextView
        android:id="@+id/select_preference_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/select_pref_text_margin_top"
        android:textColor="@color/select_pref_text_color"
        android:textSize="@dimen/select_pref_text_size" />

    <LinearLayout
        android:id="@+id/select_preference_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/select_pref_summary_margin_top"
        android:orientation="horizontal" />

    <SeekBar
        android:id="@+id/select_preference_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/select_pref_seekbar_max_height"
        android:minHeight="@dimen/select_pref_seekbar_min_height"
        android:paddingStart="@dimen/select_pref_seekbar_padding"
        android:paddingEnd="@dimen/select_pref_seekbar_padding"
        android:paddingTop="@dimen/select_pref_seekbar_padding_top"
        android:paddingBottom="@dimen/select_pref_seekbar_padding_bottom"
        android:layout_gravity="center"
        android:progressDrawable="@drawable/select_preference_seekbar_background"
        android:thumb="@drawable/select_preference_seekbar_thumb_shape"
        android:thumbOffset="@dimen/select_pref_seekbar_padding"
        android:background="@null"/>
</com.android.camera.ui.SelectTextViewLayout>