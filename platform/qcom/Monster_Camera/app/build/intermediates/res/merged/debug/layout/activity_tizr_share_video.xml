<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id = "@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tizr_content_margin_top"
        android:layout_marginBottom="@dimen/tizr_content_margin_bottom"
        android:layout_marginLeft="@dimen/tizr_content_margin_left"
        android:layout_marginRight="@dimen/tizr_content_margin_right"
        android:text= "@string/tizr_prompt_desc"
        android:textSize="@dimen/tizr_content_text_size"
        android:singleLine="false"
        android:gravity="center" />
    <Button
        android:id="@+id/startbtn"
        android:text="@string/tizr_prompt_content"
        android:layout_width="@dimen/tizr_button_width"
        android:layout_height="@dimen/tizr_button_height"
        android:layout_marginTop="@dimen/tizr_button_margin_top"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tirz_share_shape"
        android:textColor="@color/tizr_button_text_color"
        android:textSize="@dimen/tizr_button_text_size"
        android:layout_below="@+id/content" />
</RelativeLayout>
