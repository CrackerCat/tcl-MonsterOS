<com.android.camera.widget.MicroVideoGuideLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/micro_video_guide_layout"
    style="@style/MicroGuideDialog">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SurfaceView
            android:id="@+id/micro_video_guide_surfaceview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/micro_guide_content_margin_bottom"/>

        <TextView
            android:id="@+id/micro_video_guide_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/micro_video_guide_title"
            android:textSize="@dimen/micro_guide_title_textsize"
            android:textColor="@color/micro_guide_title_color"
            android:alpha="0.87"
            android:layout_marginBottom="@dimen/micro_guide_content_margin_bottom"
            android:layout_marginLeft="@dimen/micro_guide_content_margin_left"/>

        <TextView
            android:id="@+id/micro_video_guide_description"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/micro_guide_description_height"
            android:text="@string/micro_video_guide_description"
            android:textSize="@dimen/micro_guide_content_textsize"
            android:textColor="@color/micro_guide_title_color"
            android:alpha="0.87"
            android:gravity="center_vertical"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:layout_marginBottom="@dimen/micro_guide_content_margin_bottom"
            android:layout_marginRight="@dimen/micro_guide_content_margin_left"
            android:layout_marginLeft="@dimen/micro_guide_content_margin_left"/>

        <CheckBox
            android:id="@+id/micro_video_guide_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/micro_video_guide_checkbox"
            android:textSize="@dimen/micro_guide_content_textsize"
            android:textColor="@color/micro_guide_title_color"
            android:alpha="0.54"
            android:layout_marginBottom="@dimen/micro_guide_content_margin_bottom"
            android:layout_marginLeft="@dimen/micro_guide_content_margin_left"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/micro_guide_divider_height"
            android:layout_marginBottom="@dimen/micro_guide_divider_margin_bottom"
            android:background="#0D000000"/>

        <TextView
            android:id="@+id/micro_video_guide_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/micro_video_guide_button"
            android:textSize="@dimen/micro_guide_content_textsize"
            android:gravity="center"
            android:layout_gravity="end"
            android:textColor="@color/micro_guide_button_color"
            android:layout_marginEnd="@dimen/micro_guide_button_margin_right"/>
    </LinearLayout>
</com.android.camera.widget.MicroVideoGuideLayout>