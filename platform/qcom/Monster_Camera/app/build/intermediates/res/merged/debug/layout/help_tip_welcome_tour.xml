<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/take_tour_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginStart="25dp"
        android:text="@string/help_tip_welcome_title"
        android:textColor="#d50000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/context"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="start"
        android:text="@string/help_tip_welcome_context"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/welcome_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.75" />

        <Button
            android:id="@+id/take_tour_btn"
            android:layout_width="109dp"
            android:layout_height="36dp"
            android:background="#ffffff"
            android:text="@string/help_tip_welcome_take_tour"
            android:textColor="#ff0000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/cancel_tour_btn"
            android:layout_width="109dp"
            android:layout_height="36dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/black"
            android:text="@string/help_tip_welcome_cancel_tour"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>