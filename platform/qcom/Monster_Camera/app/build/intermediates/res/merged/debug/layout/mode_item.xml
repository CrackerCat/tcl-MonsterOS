<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/mode_item_padding_top"
              android:paddingBottom="@dimen/mode_item_padding_bottom"
              android:layout_gravity="center">

    <ImageView
        android:layout_width="@dimen/mode_item_divition"
        android:layout_height="@dimen/mode_item_divition"
        android:id="@+id/mode_item_img"
        android:src="@drawable/camera_crop"
        android:layout_marginTop="@dimen/mode_item_divition_margin_top"
        android:layout_gravity="top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/mode_item_text_margin_right"
        android:layout_marginLeft="@dimen/mode_item_text_margin_left"
        android:id="@+id/mode_item_name"
        android:singleLine="true"
        android:gravity="top|center"
        style="@style/ModeNameText" />
</LinearLayout>
