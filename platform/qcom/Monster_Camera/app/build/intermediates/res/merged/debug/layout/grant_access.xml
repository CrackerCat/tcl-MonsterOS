<?xml version="1.0" encoding="utf-8"?>
<com.android.camera.widget.FractionFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/permissions_dialog_background_color">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/perms_deny_title_marginStart"
        android:layout_marginTop="@dimen/perms_deny_title_marginTop"
        android:text="@string/grant_access_title"
        android:textColor="@color/permissions_dialog_text_color"
        android:textSize="@dimen/perms_deny_title_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/perms_deny_msg_marginStart"
        android:layout_marginTop="@dimen/perms_deny_msg_marginTop"
        android:layout_marginEnd="@dimen/perms_deny_msg_marginEnd"
        android:text="@string/grant_access_msg"
        android:textColor="@color/permissions_dialog_text_color"
        android:textSize="@dimen/perms_deny_msg_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/permissions_dialog_text_color"
        android:layout_marginTop="@dimen/perms_deny_div_marginTop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/perms_deny_bn_layout_height"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/exit_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null">
            <TextView
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/grant_access_exit"
                android:textSize="@dimen/perms_deny_bn_text_size"
                android:textColor="@color/permissions_dialog_text_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/settings_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@null">
            <TextView
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/grant_access_settings"
                android:textSize="@dimen/perms_deny_bn_text_size"
                android:textColor="@color/permissions_dialog_text_color" />

        </LinearLayout>

    </LinearLayout>

</com.android.camera.widget.FractionFrameLayout>