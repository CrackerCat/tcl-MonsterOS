<com.android.mms.ui.ConversationListItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mst="http://schemas.android.com/apk/res/com.mst"
    android:id="@+id/conv_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:minHeight="?android:attr/listPreferredItemHeightLarge"
    android:orientation="horizontal"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
    android:paddingStart="?android:attr/listPreferredItemPaddingStart">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <CheckBox
            android:id="@+id/list_item_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dip"
            android:clickable="false"
            android:focusable="false"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/first_line_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginTop="16dip"
            android:layout_toEndOf="@id/list_item_check_box"
            android:orientation="horizontal">

            <!--android:textAppearance="?android:attr/textAppearanceListItemSmall"-->
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dip"
                android:maxLines="1"
                android:textSize="12sp" />

            <RelativeLayout
                android:id="@+id/from_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/date"
                android:orientation="horizontal">
                <!--
                android:ellipsize="middle"
                -->
                <TextView
                    android:id="@+id/from"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="@dimen/conversation_list_title_max_width"
                    android:maxLines="1"
                    android:textAppearance="?android:attr/textAppearanceListItem" />

                <TextView
                    android:id="@+id/unread1"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_alignTop="@id/from"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="2dip"
                    android:layout_marginTop="3dip"
                    android:layout_toEndOf="@id/from"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/unread2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="7dip"
                    android:layout_toEndOf="@id/from"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:visibility="gone" />
            </RelativeLayout>

        </RelativeLayout>

        <!--
        android:layout_toEndOf="@id/list_item_check_box"
        -->
        <RelativeLayout
            android:id="@+id/second_line_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@id/first_line_layout"
            android:layout_alignWithParentIfMissing="true"
            android:layout_marginBottom="17dip"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/sim_icon_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/attachment"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_attachment_universal_small"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/sim_indicator_icon"
                    android:layout_width="13dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_sim_icon_1"
                    android:visibility="gone" />
            </LinearLayout>

            <!--
            android:textAppearance="?android:attr/textAppearanceListItemSecondary"
            android:maxWidth="@dimen/conversation_list_summary_max_width"
            -->
            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/sim_icon_layout"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>
</com.android.mms.ui.ConversationListItem>