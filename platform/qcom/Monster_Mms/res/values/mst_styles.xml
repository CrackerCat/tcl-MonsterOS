<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="@com.mst:style/Theme.Mst.Material.Light">
        <item name="android:toolbarStyle">@style/ToolbarStyle</item>
        <item name="com.mst:windowLayoutStyle">@style/WindowLayoutStyle</item>
    </style>

    <style name="Theme.Mms" parent="@com.mst:style/Theme.Mst.Material.Light">
        <item name="android:statusBarColor">?android:attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="com.mst:windowLayoutStyle">@style/WindowLayoutStyle</item>
        <item name="com.mst:actionPositiveText">@string/select_all</item>
        <item name="com.mst:actionNagativeText">@string/cancel</item>
        <item name="android:toolbarStyle">@style/ToolbarStyle</item>
    </style>

    <style name="Theme.Mms.NoArrow" parent="@com.mst:style/Theme.Mst.Material.Light">
        <item name="android:statusBarColor">?android:attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="com.mst:windowLayoutStyle">@style/WindowLayoutStyle.NoArrow</item>
        <item name="com.mst:actionPositiveText">@string/select_all</item>
        <item name="com.mst:actionNagativeText">@string/cancel</item>
        <item name="android:toolbarStyle">@style/ToolbarStyle</item>
        <item name="com.mst:colorToolbarIcon">#FFAAAAAA</item>
    </style>

    <style name="Theme.MstSetting" parent="@com.mst:style/Theme.Mst.Material.Light">
        <item name="android:statusBarColor">?android:attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:toolbarStyle">@style/ToolbarStyle</item>
        <item name="com.mst:windowLayoutStyle">@style/WindowLayoutStyle</item>
    </style>

    <!-- java code call {@link mst.app.MstActivity.setTitle() -->
    <style name="ToolbarStyle" parent="com.mst:style/ToolbarStyle">
        <item name="com.mst:title">@string/app_label</item>
    </style>

    <!-- java code call @link mst.app.MstActivity.showBackIcon(boolean show) -->
    <style name="WindowLayoutStyle" parent="com.mst:WindowStyle.Light">
        <item name="com.mst:hasBackIcon">true</item>
    </style>

    <!-- remove the back arrow -->
    <style name="WindowLayoutStyle.NoArrow" parent="com.mst:WindowStyle.Light">
        <item name="com.mst:hasBackIcon">false</item>
    </style>

    <style name="Theme.Mms.Fullscreen" parent="@com.mst:style/Theme.Mst.Material.Light">
        <item name="com.mst:windowLayoutStyle">@style/Style.MstActivity.NoToolbar</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="Style.MstActivity.NoToolbar" parent="com.mst:WindowStyle.Light">
        <item name="com.mst:windowHasToolbar">false</item>
    </style>
    <style name="Theme.Mms.Fullscreen.Translucent" parent="@style/Theme.Mms.Fullscreen">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="Theme.Mms.Fullscreen.Fade" parent="@style/Theme.Mms.Fullscreen">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>\
       <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="recipients_editor_tv_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/flowlayout_margin</item>
        <item name="android:background">@drawable/recipients_editor_tv_bg</item>
        <item name="android:textColor">#FF000000</item>
        <item name="android:textSize">15dp</item>
    </style>
</resources>
