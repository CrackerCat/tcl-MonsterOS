<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/duoqu_train_air_dialog_padding"
    android:paddingStart="@dimen/duoqu_train_air_dialog_padding" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/duoqu_train_air_dialog_height" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textColor="@color/duoqu_air_train_title_color"
                android:textSize="@dimen/duoqu_train_air_dialog_title_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_text"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/item_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxWidth="@dimen/duoqu_train_air_dialog_max_width"
                    android:singleLine="true"
                    android:textColor="@color/duoqu_air_train_content_color"
                    android:textSize="@dimen/duoqu_train_air_dialog_info_size" />
            </LinearLayout>
        </RelativeLayout>

        <View
            android:id="@+id/item_check"
            android:layout_width="@dimen/duoqu_train_air_dialog_view_size"
            android:layout_height="@dimen/duoqu_train_air_dialog_view_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</LinearLayout>