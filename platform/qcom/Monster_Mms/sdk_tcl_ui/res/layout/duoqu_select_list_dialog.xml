<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/duoqu_navi_list_top_bot"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center"
        android:textColor="@color/duoqu_theme_color_3011"
        android:textSize="@dimen/duoqu_train_air_dialog_title_text_size" />

    <LinearLayout
        android:id="@+id/item_roots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <View
        android:id="@+id/duoqu_bottom_split_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/duoqu_train_air_dialog_bottom_split_line_height"
        android:background="@color/duoqu_air_train_split_line" />

    <LinearLayout
        android:id="@+id/bottom_items"
        android:layout_width="match_parent"
        android:layout_height="@dimen/duoqu_train_air_dialog_bottom_height"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/duoqu_select_dialog_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/duoqu_ui_part_cancel"
            android:textColor="@color/duoqu_air_train_title_color"
            android:textSize="@dimen/duoqu_train_air_dialog_title_text_size" />

        <TextView
            android:id="@+id/duoqu_select_dialog_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/duoqu_ui_part_confirm"
            android:textColor="@color/duoqu_air_train_title_color"
            android:textSize="@dimen/duoqu_train_air_dialog_title_text_size" />
    </LinearLayout>

</LinearLayout>