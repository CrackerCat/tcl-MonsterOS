<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/duoqu_vertify_head_width"
    android:layout_height="wrap_content" 
    android:paddingBottom="@dimen/duoqu_horiz_first_context_padding_bottom">
    
    <TextView 
        android:id="@+id/duoqu_horiz_table_title"
        android:layout_width="wrap_content"
        android:includeFontPadding="false"
        android:layout_height="wrap_content"/>
    
    <TextView 
        android:id="@+id/duoqu_horiz_table_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:includeFontPadding="false"
        android:ellipsize="end"
        android:layout_below="@id/duoqu_horiz_table_title"
        android:layout_marginStart="@dimen/duoqu_horiz_content_margin_left"/>

</RelativeLayout>
