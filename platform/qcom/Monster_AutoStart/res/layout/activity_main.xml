<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_backgound_color"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_totalcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_main_tv_total_count_margin_left"
        android:layout_marginTop="@dimen/activity_main_tv_total_count_margin_top"
        android:textColor="@color/activity_textview_color"
        android:textSize="@dimen/activity_main_tv_total_count_text_size"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        >

        <RelativeLayout
             android:id="@+id/rel_content_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_main_image_hints_margin_top"
                android:src="@drawable/noting" />

            <TextView
                android:id="@+id/tx1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img2"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/activity_main_tv1_hints_margin_top"
                android:text="@string/str_no_auto_apps"
                android:textColor="@color/adapter_textview_color"
                android:textSize="@dimen/activity_main_tv1_hints_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tx1"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/activity_main_tv2_hints_margin_top"
                android:text="@string/str_no_auto_apps_note"
                android:textColor="@color/activity_textview_color"
                android:textSize="@dimen/activity_main_tv2_hints_text_size" />
        </RelativeLayout>

        <ListView
            android:id="@+id/lv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="#00ffffff"
            android:visibility="invisible" 
            />
    </RelativeLayout>

</LinearLayout>