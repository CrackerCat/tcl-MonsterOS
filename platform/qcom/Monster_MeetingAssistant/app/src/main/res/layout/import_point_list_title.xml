<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_import_list_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/page_import_point_list_title_height"
    android:layout_marginTop="15dp"
    android:gravity="center_vertical"
    android:background="@color/card_color"
    android:orientation="horizontal">

    <TextView
        android:fontFamily="monster-normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_common_15dp"
        android:layout_centerVertical="true"
        android:text="@string/highlight"
        android:textSize="@dimen/font_size_16sp"
        android:textColor="@color/black_86opacity"
        android:gravity="center_vertical|left"/>

    <ImageButton
        android:layout_alignParentRight="true"
        android:id="@+id/import_point_add_btn"
        android:gravity="center"
        android:layout_marginRight="11dp"
        android:layout_centerVertical="true"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@mipmap/btn_add_import_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>