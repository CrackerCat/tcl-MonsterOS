<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_recinbox_sdk_pic_nowork" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:fontFamily="monster-normal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/cannot_open_internet"
            android:textColor="#666666"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="104dp"
        android:orientation="vertical" >

        <TextView
            android:fontFamily="monster-normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_nowork_point"
            android:drawablePadding="5dp"
            android:text="@string/internet_problem"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:fontFamily="monster-normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_nowork_point"
            android:drawablePadding="5dp"
            android:text="@string/no_open_internet"
            android:textColor="#999999"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="25dp">
        <TextView
            android:fontFamily="monster-normal"
            android:id="@+id/recinbox_sdk_net_error_retry"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:background="@drawable/recinbox_sdk_selector_bg"
            android:gravity="center"
            android:text="@string/try_to_refresh"
            android:textColor="#666666"
            android:textSize="12sp"/>

    </LinearLayout>
</LinearLayout>
