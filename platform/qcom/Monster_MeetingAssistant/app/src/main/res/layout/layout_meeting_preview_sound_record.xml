<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/card_color">
    <include layout="@layout/layout_meeting_preview_sub_title"
        android:id="@+id/meeting_sound_record_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:fontFamily="monster-normal"
        android:id="@+id/meeting_sound_record_content"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_common_15dp"
        android:layout_marginRight="@dimen/layout_common_15dp"
        android:layout_marginTop="@dimen/layout_common_21dp"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/font_size_14sp"
        android:textColor="@color/black_86opacity"
        android:lineSpacingExtra="@dimen/layout_common_7dp" />

</LinearLayout>