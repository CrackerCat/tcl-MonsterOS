<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/app_item_height"
    android:background="@drawable/list_item_selector"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="10dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_item_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:layout_toLeftOf="@+id/progressBtn"
        android:layout_toRightOf="@+id/iv_icon"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.86"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.86"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.4"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:textSize="13sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_recovery_update"
        android:minWidth="80dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/app_item_down_btn_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_default_selector"
        android:stateListAnimator="@null"
        android:gravity="center"
        android:text="@string/recovery_update"
        android:textColor="@android:color/black"
        android:textSize="@dimen/progressBtnTextSize" />

</RelativeLayout>