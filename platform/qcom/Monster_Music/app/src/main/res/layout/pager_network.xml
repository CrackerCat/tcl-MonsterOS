<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/base_title_color"
        app:tabTextAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/base_title_unselect_color"
        app:tabTextColor="@color/base_title_unselect_color"
        app:tabSelectedTextColor="@color/tab_selected_color"
        android:visibility="visible"
        android:background="@color/music_theme_color"/>
    <cn.tcl.music.view.striptab.CustomViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>

    <ImageView
        android:id="@+id/xiami_icon_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/activity_right_margin"
        android:layout_marginEnd="@dimen/activity_right_margin"
        android:layout_marginRight="@dimen/activity_right_margin"
        android:src="@drawable/xiami_icon" />
</FrameLayout>