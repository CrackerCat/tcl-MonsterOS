<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp">

    <ImageView
        android:id="@+id/item_down_image"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/item_down_icon"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="13dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/item_down_icon"
        android:layout_toRightOf="@id/item_down_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_down_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.86"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <ProgressBar
            android:id="@+id/item_down_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="176dp"
            android:layout_height="2dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:alpha="0.86"
            android:background="#e6e6e6"
            android:focusable="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_down_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.86"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/item_down_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0.30"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>