    <FrameLayout
        android:id="@+id/batch_operate_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/batch_status_height"
        android:layout_gravity="top"
        android:background="@color/music_theme_color"
        >
        <RelativeLayout
            android:id="@+id/batch_process_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/detail_play_all_image"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/picto_play_off"/>

            <TextView
                android:id="@+id/detail_play_all_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@id/detail_play_all_image"
                android:alpha="0.86"
                android:gravity="center_vertical"
                android:text="@string/play_all1"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/detail_total_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@id/detail_play_all_tv"
                android:gravity="center_vertical"
                android:alpha="0.4"
                android:textColor="@color/black"
                android:textSize="15sp"/>
        </RelativeLayout>
        <include layout="@layout/line"/>
    </FrameLayout>


