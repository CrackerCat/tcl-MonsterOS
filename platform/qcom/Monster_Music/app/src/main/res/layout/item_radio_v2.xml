<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:paddingBottom="4dp"
              android:paddingLeft="4dp"
              android:paddingRight="4dp"
              android:weightSum="3">

    <FrameLayout
        android:id="@+id/layout_1"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="2dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_radio1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_cover_home"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="#89000000"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/tv_radio1_name"
                style="@style/textview_white_14sp_87"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image1_count"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/picto_listen"/>

                <TextView
                    android:id="@+id/tv_radio1_count"
                    style="@style/textview_white_12sp_54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_2"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_radio2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_cover_home"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="#89000000"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/tv_radio2_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image2_count"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/picto_listen"/>

                <TextView
                    android:id="@+id/tv_radio2_count"
                    style="@style/textview_white_12sp_54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_3"
        android:layout_width="0dp"
        android:layout_height="116dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="2dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_radio3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_cover_home"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="#89000000"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/tv_radio3_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image3_count"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/picto_listen"
                    />

                <TextView
                    android:id="@+id/tv_radio3_count"
                    style="@style/textview_white_12sp_54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>