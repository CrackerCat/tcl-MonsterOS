<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/data_saver_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.86"
        android:text="@string/data_saver_text_warning_dialog"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <CheckBox
        android:id="@+id/checkbox_show_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/data_saver_text"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/data_saver_text"
        android:layout_marginStart="25dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/checkbox_show_again"
        android:alpha="0.40"
        android:text="@string/never_show_it_again"
        android:textColor="#000000"/>

</RelativeLayout>