<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="146dp"
                android:background="@drawable/item_shape"
                android:paddingLeft="16dp"
                android:paddingRight="12dp"
                android:paddingTop="14dp">

    <TextView
        android:id="@+id/rank_name"
        style="@style/textview_black_gd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:singleLine="true"/>

    <ImageView
        android:id="@+id/rank_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/rank_name"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:scaleType="fitCenter"
        android:src="@drawable/default_cover_ranking"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:layout_alignTop="@+id/rank_logo"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/rank_logo"
        android:layout_toLeftOf="@+id/rank_more"
        android:layout_toRightOf="@id/rank_logo"
        android:layout_toStartOf="@+id/rank_more"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/song_lay1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/rank_logo"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rank_song1"
                style="@style/textview_black_gd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/rank_singer1"
                style="@style/textview_black_gd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/song_lay2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/song_lay1"
            android:layout_alignStart="@id/song_lay1"
            android:layout_below="@id/song_lay1"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rank_song2"
                style="@style/textview_black_gd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/rank_singer2"
                style="@style/textview_black_gd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/song_lay3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/song_lay2"
            android:layout_alignStart="@id/song_lay2"
            android:layout_below="@id/song_lay2"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rank_song3"
                style="@style/textview_black_gd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/rank_singer3"
                style="@style/textview_black_gd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/song_lay4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/song_lay3"
            android:layout_alignStart="@id/song_lay3"
            android:layout_below="@id/song_lay3"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rank_song4"
                style="@style/textview_black_gd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/rank_singer4"
                style="@style/textview_black_gd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/rank_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="12dp"
        android:paddingTop="3dp"
        android:src="@drawable/picto_right"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/rank_more"
        android:text="@string/more"
        android:textColor="@color/base_title_unselect_color"
        android:textSize="12sp"/>

</RelativeLayout>