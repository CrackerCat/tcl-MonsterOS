<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:orientation="vertical">

    <ImageView
        android:id="@id/artwork_image_view"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/selected_layout"
        android:contentDescription="@string/artwork"
        android:scaleType="fitXY"
        android:src="@drawable/default_cover_list"/>

    <Space
        android:id="@+id/text_spacer"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/title_album_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@id/artwork_image_view"
        android:alpha="0.86"
        android:ellipsize="end"
        android:gravity="start|center"
        android:singleLine="true"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="15sp"/>


    <TextView
        android:id="@+id/song_counts_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/title_album_text_view"
        android:layout_below="@id/text_spacer"
        android:alpha="0.40"
        android:ellipsize="end"
        android:gravity="start|top"
        android:singleLine="true"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/date_album_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/song_counts_textview"
        android:layout_below="@id/song_counts_textview"
        android:layout_marginTop="3dp"
        android:alpha="0.40"
        android:ellipsize="end"
        android:gravity="start|top"
        android:singleLine="true"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="12sp"/>
</RelativeLayout>