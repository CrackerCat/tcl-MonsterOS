<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:paddingTop="11dp"
                android:paddingBottom="11dp">

    <ImageView
        android:id="@+id/item_downed_image"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/item_downed_menu"
        android:layout_width="23dp"
        android:layout_height="23dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="13dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_menu"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/item_downed_menu"
        android:layout_toRightOf="@id/item_downed_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_downed_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.86"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <LinearLayout
            android:id="@+id/item_down_detail_linearlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_downed_singer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:alpha="0.30"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="visible"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:alpha="0.30"
                android:singleLine="true"
                android:text="â€”"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/item_downed_album_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:alpha="0.30"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:visibility="visible"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>