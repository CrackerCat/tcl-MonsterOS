<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/layout_topbar">

    <LinearLayout
        android:id="@+id/layout_topbar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!--左区域-->
        <FrameLayout
            android:id="@+id/layout_left_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_left_area"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/global_return_selector"
                android:drawablePadding="2dp"
                android:singleLine="true"
                android:textSize="16dp"
                android:textColor="#50484b"
                android:paddingLeft="18dp"
                android:paddingRight="6dp"
                android:gravity="center"
            />

        </FrameLayout>

        <!--中区域-->
        <FrameLayout
            android:id="@+id/layout_middle_area"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_middle_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="虾米音乐"
                    android:singleLine="true"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:fadingEdge="none"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                />

                <TextView
                    android:visibility="gone"
                    android:textSize="12dp"
                    android:textColor="#888888"
                    android:id="@+id/tv_middle_sub_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                />

            </LinearLayout>

        </FrameLayout>

        <!--右区域-->
        <FrameLayout
            android:id="@+id/layout_right_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_right_area"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textSize="16dp"
                android:textColor="#50484b"
                android:drawablePadding="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="18dp"
                android:gravity="right|center_vertical"
            />

            <TextView
                android:id="@+id/tv_right_area_text"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textSize="16dp"
                android:textColor="#000000"
                android:drawablePadding="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="18dp"
                android:gravity="right|center_vertical"
            />

        </FrameLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#1A000000"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
    />

</FrameLayout>