<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/appdetail_item_two_line_with_arrow_height"
    android:orientation="horizontal"
    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
    android:paddingRight="20dp"
    android:paddingStart="@dimen/appdetail_item_body_margin_left" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/notification_item1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/notification_item1"
            android:textAppearance="?android:attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/notification_item2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:singleLine="true"
            android:text="@string/notification_item2"
            android:textAppearance="?android:attr/textAppearanceListItem" />
    </LinearLayout>

    <ImageView
        android:id="@+id/pref_image_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/arrow_right" />

</LinearLayout>